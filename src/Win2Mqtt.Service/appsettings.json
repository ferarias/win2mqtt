{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        }
    },
    "Win2MQTT": {
        "Broker": {
            "Server": "192.168.1.4",
            "Port": 1883,
            "Username": "",
            "Password": ""
        },
        "MqttTopic": "lechuck",
        "MqttTopicQoS": 1,
        "TimerInterval": 5,
        "EnableNotifications": false,
        "Sensors": {
            "CpuSensor": true,
            "FreeMemorySensor": true,
            "IsComputerUsed": true,
            "DiskSensor": true,
            "NetworkSensor": true
        },
        "Listeners": {
            "SendMessage": {
                "Topic": "sendmessage",
                "Enabled": true
            },
            "Exec": {
                "Topic": "exec",
                "Enabled": true
            },
            "ProcessRunning": {
                "Topic": "process/running",
                "Enabled": true
            },
            "Shutdown": {
                "Topic": "shutdown",
                "Enabled": true
            },
            "Reboot": {
                "Topic": "reboot",
                "Enabled": true
            },
            "Suspend": {
                "Topic": "suspend",
                "Enabled": true
            },
            "Hibernate": {
                "Topic": "hibernate",
                "Enabled": true
            }
        }
    }
}
